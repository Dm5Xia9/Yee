@page "/admin/files"
@using Yee.FileStorage.Services
@inject FileStorageService fileStorage

<AdminPage>
    <Header>
        <div class="d-flex align-items-center flex-wrap mr-1">
            <!--begin::Page Heading-->
            <div class="d-flex align-items-baseline flex-wrap mr-5">
                <!--begin::Page Title-->
                <h5 class="text-dark font-weight-bold my-1 mr-5">Файлы</h5>
                <!--end::Page Title-->
            </div>
            <!--end::Page Heading-->
        </div>
    </Header>
    <Body>
        <div style="padding: 1rem;">
            @foreach(var file in fileStorage.GetAllPublicFiles())
                {
                <div>
                    <a href="@file">@file</a>
                </div>
                }
        </div>
    </Body>
</AdminPage>



